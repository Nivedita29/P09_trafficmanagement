<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_edit"
            android:layout_alignParentTop="true"
            android:id="@+id/tv_logout"
            android:padding="5dp"
            android:text="Logout"
            android:textColor="#fff"
            android:textSize="25dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:src="@drawable/ic_account"
            android:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_person_black"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#fff"

            android:text="Admin"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_edit_black_24dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#FFF"
            android:text="Edit"
            android:textSize="25dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="#607d8b"

        >

        <Button
            android:id="@+id/btn_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="50dp"
            android:background="#1FA463"
            android:text="Add new entry"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_recognize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="182dp"
            android:layout_marginRight="50dp"
            android:background="#FFD04B"
            android:text="Recognize"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="50dp"
            android:background="@color/bg_screen4"
            android:text="Number plate detection"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_viewrecords"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_below="@+id/btn_recognize"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="253dp"
            android:layout_marginRight="50dp"
            android:background="#4688F4"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </RelativeLayout>
    <LinearLayout
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal"
        android:background="#1FA463"
        android:weightSum="3"
        android:backgroundTint="#000"
        android:layout_alignParentBottom="true">
        <ImageView
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/iv_home"
            android:tint="#fff"
            android:src="@drawable/ic_home_black_24dp"/>
        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="#fff"

            android:src="@drawable/ic_mode_edit_black_24dp"/>
        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:tint="#fff"

            android:src="@drawable/ic_search_black_24dp"/>

    </LinearLayout>
</RelativeLayout>